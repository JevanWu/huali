<% content_for(:css) do %>
  <%= stylesheet_link_tag "jquery.ui.datepicker" %>
<% end %>

<% content_for(:js) do %>
  <%= javascript_include_tag "datepicker-settings" %>
<% end %>

<% content_for(:title_img) do %>
  <%= image_tag('title-checkout.png') %>
<% end %>

<div class='row'>
  <div class="span4">
    <% unless @products.blank? %>
      <%= render 'orders/side_item_table', items: @products, title: t(:basket) %>
    <% end %>
  </div>

  <div class="span8">
    <div id='reminder-form'>
      <%= render 'form' %>
    </div>
  </div>
</div>
