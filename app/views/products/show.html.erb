<% content_for :sidebar do %>
  <div id="product-side">
    <h2 class="product-name"><span><%= @product.name_cn %></span></h2>

    <% unless @product.original_price.nil? %>
    <p class="price old-price"> <%= @product.original_price %> RMB </p>
    <% end %>
    <p class="price"> <%= @product.price %> RMB </p>
    <p class="meta">(免运费)</p>


    <% if @product.count_on_hand > 0 %>
      <p>
        <%= link_to '放入购花篮', order_path(@product), :class => 'button' %>
      </p>
    <% else %>
      <p> 已经售罄 </p>
      <small class="meta">如需加入订购队列，请联系客服</small>
    <% end %>

  </div>
  <div id="product-summary" class="span3 offset1">
    <%= markdown @product.inspiration %>
  </div>
<% end %>

<div id="product-wrapper">
  <div id="image-showcase">
    <div id="image-cover"></div>
    <%= image_tag @asset_urls.first[:full], alt: "#{@product.name_cn} Images" %>
  </div>
  <ul id="image-slides" class="links">
    <% @asset_urls.each_with_index do |asset_url, index| %>
      <% if index < 5 %>
      <li class="slide">
        <%= link_to image_tag(asset_url[:thumb], alt: "product image"), asset_url[:full], :class => 'thumbnail', :title => @product.name_cn  %>
      </li>
      <% end %>
    <% end %>
  </ul>


  <div id="product-info">
    <h3>产品信息</h3>
    <p class="in-stock">库存: <span><%= @product.available ? "有货" : "无货" %></span></p>
    <p class="size">
      <span>大小: </span>
      <span> 高 <%= @product.height %> cm </span>
      <span> 宽 <%= @product.width %> cm </span>
      <span> 长 <%= @product.depth %> cm </span>
    </p>
    <%= markdown @product.description %>
  </div>

</div>
