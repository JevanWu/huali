<div class="product-view">
  <div class="product-essential row">
    <div class="product-img-box span5 ">
      <div class="zoom-container layout_default">
        <div class="main-image">
          <%= link_to image_tag(@asset_urls.first[:medium_url], class: 'zoom-image'),
            @asset_urls.first[:full_url], id: 'zoom', title:@product.name_cn %>
        </div>

        <div class="more-views">
          <div class="zoom-gallery slider">
            <% @asset_urls.each do |asset_url| %>
              <div class="slide">
                <a href="" class="zoom-thumbnail"
                  data_url='<%= link_to image_tag(asset_url[:medium_url], class: 'zoom-image'), asset_url[:full_url], id:'zoom', title:@product.name_cn %>'>
                  <%= image_tag asset_url[:medium_url], alt: "product image" %>
                </a>
              </div>
            <% end %>
          </div>
        </div>

        <div class="more-views-arrow prev"></div>
        <div class="more-views-arrow next"></div>

      </div>
    </div>

    <div class="product-info span7">
      <div class="white-back">
        <div class="product-name">
          <h2><%= @product.name_cn %></h2>
        </div>

        <div class="price-box">
          <p class="old-price">
            <span class="price-label">日常价:</span>
            <span class="price" id="old-price-329">￥<%= @product.original_price %></span>
          </p>

          <p class="special-price">
            <span class="price-label">特惠价:</span>
            <span class="price" id="product-price-329">￥<%= @product.price %></span>
          </p>
          <p class="availability in-stock">库存: <span><%= @product.available ? "有货" : "无货" %></span></p>
        </div>
        <div class="short-description">
          <p>简短描述</p>
          <div class="std">
            <%= @product.intro %>
          </div>
        </div>
        <div class="product-options" id="product-options-wrapper">
          <div class="add-to-cart">
            <button type="submit"  class="button btn-cart" >点击购买</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="product-tabs-content row" id="product_tabs_description_contents" >
    <div class="span12">
    <h2>详细信息</h2>
    <p>
      <%= markdown @product.description %>
    </p>
  </div>
  </div>
</div>
