<% content_for :sidebar do %>
  <div id="product-side">
    <h2 class="product-name"><span>得失</span></h2>

    <% unless @product.original_price.nil? %>
    <p class="price old-price"> <%= @product.original_price %> RMB </p>
    <% end %>
    <p class="price"> <%= @product.price %> RMB </p>
    <p class="meta">(免运费)</p>

    <p>
      <%= link_to '放入购花篮', '/cart', :class => 'button', :method => :post %>
    </p>
    <p>
      <%= link_to '查看购花篮', '/cart', :class => 'button-alt' %>
    </p>

  </div>
  <div id="product-summary">
    <p>like a song, or a dream;</p>
    <p>or a waste, </p>
    <p>or a glimpse of wondering;</p>
    <p>like all that did not yet happen.</p>
    <p>还未丧失,</p>
    <p>早已得到.</p>
  </div>
<% end %>

<div id="product-wrapper">
  <div id="image-showcase">
    <div id="image-cover"></div>
    <%= image_tag('home-img1.png') %>
  </div>
  <ul id="image-slides" class="links">
    <% @asset_urls.each_with_index do |asset_url, index| %>
      <% if index < 5 %>
      <li class="slide">
        <%= link_to image_tag('home-img1.png', alt: "product image"), asset_url[:full_url], :class => 'thumbnail', :title => @product.name_cn  %>
      </li>
      <% end %>
    <% end %>
  </ul>


  <div id="product-info">
    <h3>产品信息</h3>
    <p class="in-stock">库存: <span><%= @product.available ? "有货" : "无货" %></span></p>
    <p class="size">
      <span>大小: </span>
      <span> 高 <%= @product.height %> cm </span>
      <span> 宽 <%= @product.width %> cm </span>
      <span> 长 <%= @product.depth %> cm </span>
    </p>
    <%= markdown @product.description %>
  </div>

</div>
