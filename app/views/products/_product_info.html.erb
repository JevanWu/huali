<div id="product-info">
  <% unless @product.description.empty? %>
    <h3><%= t('product_info').capitalize %></h3>
    <p class="size">
      <span><%= t('views.product.show.size').capitalize %>: </span>
      <span><%= t('views.product.show.height').capitalize %> <%= @product.height %> cm </span>
      <span><%= t('views.product.show.width').capitalize %> <%= @product.width %> cm </span>
      <span><%= t('views.product.show.depth').capitalize %> <%= @product.depth %> cm </span>
    </p>
    <%= markdown @product.description %>
  <% end %>
</div>
