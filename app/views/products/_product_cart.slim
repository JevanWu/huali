- content_for :css do
  = stylesheet_link_tag "modules/product_cart", media: "all"

= simple_form_for @cart, url: carts_path, html: {class: "form-horizontal"} do |f|
  = f.input :user_id, as: :hidden, input_html: { value: current_user.try(:id) }
  = f.input :product_id, as: :hidden, input_html: { value: @product.id }
  = f.input :quantity, as: :hidden, input_html: { value: "1" }
  = f.input :price, as: :hidden, input_html: { value: @product.price }
  = f.submit "放入购物车", class: "button"
