= form_tag("/admin/users/#{@user.id}/add_binding_coupon_code", method: :patch)
  fieldset.inputs
    legend
      span Main Info
    ol
      li
        = label "user_email", t("views.user.labels.user_email")
        = text_field_tag "user_email", @user.email, disabled: true
      li
        = label "user_name", t("views.user.labels.user_name")
        = text_field_tag "user_name", @user.name, disabled: true
      li
        = "已绑定的优惠码：#{@user.coupon_codes.map(&:code).join(',')}"
      li
        = label "coupon_code", t("views.user.labels.coupon_code")
        = text_field_tag "coupon_code", nil, autofocus: true
  fieldset.actions
    ol
      li
        = submit_tag "submit"

