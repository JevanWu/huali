<%= semantic_form_for [:admin, @transaction] do |f| %>
  <%= f.semantic_errors :order, :amount, :paymethod, :merchant_name %>
  <%= f.inputs "Main Info" do %>
    <%= f.input :order_id, wrapper_html: { style: "display:none;" } %>
    <%= f.input :amount, required: true %>
    <%= f.input :paymethod, required: true, collection: Transaction.paymethod.options %>
    <%= f.input :merchant_name, required: true, collection: Transaction.merchant_name.options %>
    <%= f.input :merchant_trade_no %>
    <%= f.input :subject %>
    <%= f.input :body %>
  <% end %>
  <%= f.actions %>
<% end %>
