<%= semantic_form_for [:admin, @ship_method] do |f| %>
  <%= f.semantic_errors :name %>
  <%= f.inputs "Main Info" do %>
    <%= f.input :name %>
    <%= f.input :method, as: :radio, collection: { t('views.admin.ship_method.manual') => "manual", t('views.admin.ship_method.express') => "express" } %>
    <%= f.input :service_phone %>
    <%= f.input :website %>
    <%= f.input :kuaidi_query_code %>
  <% end %>
  <%= f.actions %>
<% end %>
