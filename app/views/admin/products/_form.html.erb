<%= semantic_form_for [:admin, @product] do |f| %>
  <%= f.inputs "Main Info" do %>
    <%= f.input :available, :label => "Available", :as => :boolean %>
    <%= f.input :published, :label => "Published", :as => :boolean %>
    <%= f.input :name_zh, :label => "Chinese Name", required: true %>
    <%= f.input :name_en, :label => "English Name", required: true %>
    <%= f.input :name_char, :label => "Chinese Character" %>

    <!-- use col.name_cn as checkboxname, col.id as checkbox id which is passed as params -->
    <!-- the last option :collection takes an hash for each check options-->
    <%= f.input :collection, :collection => Hash[Collection.all.map { |col| [col.name_cn, col.id] }] %>

    <%= f.input :inspiration_zh, :hint => "Use Markdown to write the content" , :input_html => {:rows => 10}, required: true %>
    <%= f.input :inspiration_en, :hint => "Use Markdown to write the content" , :input_html => {:rows => 10} %>

    <%= f.input :description_zh, :hint => "Use Markdown to write the content" , :input_html => {:rows => 10} %>
    <%= f.input :description_en, :hint => "Use Markdown to write the content" , :input_html => {:rows => 10} %>

    <%= f.input :related_text, :hint => "Use Markdown to write the content" , :input_html => {:rows => 10} %>

    <%= f.input :info_source, :hint => "Use Markdown to write the content" , :input_html => {:rows => 10} %>

    <%= f.inputs :for => :assets, :class => 'image_field' do |builder, i| %>
      <% if @product.assets[i - 1].image %>
        <%= image_tag @product.assets[i - 1].image.url(:thumb)%>
      <% end %>
      <%= builder.input :image, :label => "Change Image" %>
      <%= builder.hidden_field :_destroy %>
      <%= link_to "Remove Above Image", "#", :class => "remove_fields" %>
    <% end %>

    <li class="file input">
      <label class="label">Add Image</label>
      <%= link_to_add_assets "Add Image", f, :assets %>
    </li>

  <% end %>

  <%= f.inputs "SKU Info" do %>
    <%= f.input :count_on_hand, :label => "Count", :required => true %>
    <%= f.input :price %>
    <%= f.input :original_price %>
    <%= f.input :cost_price %>
    <%= f.input :width %>
    <%= f.input :depth %>
    <%= f.input :height %>
  <% end %>

  <%= f.inputs "SEO" do %>
    <%= f.input :meta_keywords %>
    <%= f.input :meta_description %>
  <% end %>

  <%= f.actions %>
<% end %>
