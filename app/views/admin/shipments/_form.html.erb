<%= semantic_form_for [:admin, @shipment] do |f| %>
  <%= f.inputs "Main Info" do %>
    <%= f.input :tracking_num %>
    <%= f.input :ship_method_id, :as => :select, :collection => ShipMethod.all %>
    <%= f.input :cost %>
    <%= f.input :note %>
    <%= f.input :order_id, :wrapper_html => { :style => "display:none;" } %>
  <% end %>
  <%= f.actions %>
<% end %>

