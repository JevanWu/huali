<%= semantic_form_for [:admin, @order] do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs "Sender Info" do %>
    <%= f.input :sender_name %>
    <%= f.input :sender_email %>
    <%= f.input :sender_phone %>
  <% end %>

  <%= f.inputs "Delivery Info", for: :address do |builder, i| %>
    <%= builder.input :address %>
    <%= builder.input :post_code %>
    <%= builder.input :fullname %>
    <%= builder.input :phone %>
    <%= f.input :expected_date, as: :string, required: true, input_html: { class: 'datepicker' }%>
  <% end %>

  <%= f.inputs "Check Info", for: :address do |builder, i| %>
    <%= f.input :delivery_date, as: :string, input_html: { class: 'datepicker' }%>
    <%= f.input :ship_method, as: :radio, collection: ShipMethod.all %>
  <% end %>
  <%= f.actions %>

  <%= f.inputs "Payment Info" do %>
    <%= f.input :adjustment, 
      placeholder: '+20.0, -30.0, x1.1, *0.9 etc.',
      hint: 'support multiple calculation(+,-,*,x,%,/), validate format includes "-20.0", "x1.1", "%2" etc.' %>
    <%= f.input :coupon_code %>
  <% end %>

  <%= f.inputs "Order Info" do %>
    <%= f.input :source, as: :radio, collection: ['微博', '微信', '人人', '豆瓣', '平面媒体', '朋友推荐', '传单', '淘宝', '搜索引擎', '其他'] %>
    <%= f.input :special_instructions %>
    <%= f.input :gift_card_text %>
  <% end %>
  <%= f.actions %>
<% end %>
