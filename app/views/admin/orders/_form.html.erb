<%= semantic_form_for [:admin, @order] do |f| %>
  <%= f.inputs "Main Info" do %>
    <%= f.input :sender_name %>
    <%= f.input :sender_email %>
    <%= f.input :sender_phone %>
    <%= f.input :delivery_date, as: :string, required: true, input_html: { class: 'datepicker' }%>
    <%= f.input :special_instructions %>
    <%= f.input :gift_card_text %>
  <% end %>
  <%= f.actions %>
<% end %>
