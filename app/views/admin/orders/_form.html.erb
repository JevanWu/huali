<%= semantic_form_for [:admin, @order] do |f| %> 
  <%= f.inputs "Main Info" do %>
    <%= f.input :delivery_date, :label => "递送日期", as: :string, required: true, input_html: { class: 'datepicker' }%>
    <%= f.input :special_instructions, :label => "特殊要求" %>
    <%= f.input :gift_card_text, :label => "卡片信息" %>
  <% end %>
  <%= f.actions %>
<% end %>
