<%= semantic_form_for [:admin, @page] do |f| %>
  <%= f.inputs do %>
    <%= f.input :title_en %>
    <%= f.input :title_zh %>
    <%= f.input :permalink %>
    <%= f.input :in_footer %>
    <%= f.input :content_en, hint: "Use Markdown to write the content"  %>
    <%= f.input :content_zh, hint: "Use Markdown to write the content"  %>
    <%= f.input :meta_title %>
    <%= f.input :meta_keywords %>
    <%= f.input :meta_description %>
  <% end %>
  <%= f.actions %>
<% end %>
