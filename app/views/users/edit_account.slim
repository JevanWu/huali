.account-info-container
  = render 'shared/account_info_header'
  .profile
    .profile-edit
      = simple_form_for @user, url: { action: 'update_password' },
        html: { class: 'form-horizontal', method: :put } do |f|

        = f.input :current_password
        = f.input :password
        = f.input :password_confirmation

        .form-actions
          = f.button :submit, t("devise.registrations.edit.update"), class: 'button refresh'
      .delete-info
        p
          = t("devise.registrations.edit.unhappy")
          = "&nbsp; &nbsp;".html_safe
          = link_to t("devise.registrations.edit.cancel_my_account"), registration_path(:user), data: { confirm: t("devise.registrations.edit.are_you_sure") }, method: :delete
      .clearfix
  .account-info-line

