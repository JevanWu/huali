<ul id="product-nav" class="nav">
  <!-- TODO switch this to product related path -->
  <h4 class="leading">
    <span><%= t 'flower_shop' %>  </span>
    <%= image_tag 'icon-knot.png', id: 'chris-knot', alt: "Chrismas Knot" %>
  </h4>
  <dl id='nav-accordion' class='accordion'>
    <% Collection.available.each do |collection| %>
      <dt class="accordion-heading nav-header">
        <%= link_to collection.display_name, collection_path(collection) %>
      </dt>
      <dd>
        <ul class="nav nav-list">
        <% collection.products.all.each do |product| %>
          <% if @product && @product.id == product.id %>
          <li class="active">
            <% if product.new? %> <%= image_tag 'icon-new.png', id: 'chris-new', alt: "Chrismas new" %> <% end %>
            <%= link_to product.name, product_path(product), title: product.name %>
            <span class="arrow"><<</span>
          </li>
          <% else %>
          <li>
            <% if product.new? %> <%= image_tag 'icon-new.png', id: 'chris-new', alt: "Chrismas new" %> <% end %>
            <%= link_to product.name, product_path(product), title: product.name %>
            <span class="arrow"><<</span>
          </li>
          <% end %>
        <% end %>
        </ul>
      </dd>
    <% end %>
  </dl>

  <% if I18n.locale == :"zh-CN" %>
    <div id="weibo-follow">
    <wb:follow-button uid="3089584727" type="red_1" width="67" height="24" ></wb:follow-button>
    </div>
  <% end %>
</ul>
