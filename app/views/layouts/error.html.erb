<!doctype html>
<html xmlns:wb=“http://open.weibo.com/wb”>
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title><%= content_for?(:title) ? yield(:title) + ' ': ' '%> 花里花店</title>
    <meta name="description" content="<%= yield :description %>">
    <meta name="keywords" content="<%= yield(:keywords) %>">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <!--[if lt IE 9]><%= javascript_include_tag 'html5shiv' %><![endif]-->
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= yield(:css) %>
    <!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
    <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->
    <%= csrf_meta_tags %>
  </head>
  <body class="desktop">
    <div id="wrapper" class="container">
      <%= render 'layouts/messages' %>
      <div id="main" class="row">
        <div id="sidebar" class="span4">
          <div id="sidebar_wrapper">
            <%= render 'layouts/header' %>
            <%= render 'layouts/nav' %>
            <%= yield :sidebar %>
          </div>
        </div>
        <div id="content" class="<%= controller_name %> <%= action_name %> span8" role="main">
          <%= yield %>
        </div>
      </div>
      <%= render 'layouts/footer' %>
    </div> <!--! end of #container -->
  </body>
    <%= javascript_include_tag 'http://tjs.sjs.sinajs.cn/open/api/js/wb.js' %>
    <%= javascript_include_tag "application"  %>
    <%= yield(:js) %>
    <!-- only include controller-specific js accordingly -->
    <%= javascript_include_tag "ga" %>
</html>
