<!doctype html>
<html>
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title><%= content_for?(:title) ? yield(:title) + ' ': ' '%> 花里花店</title>
    <meta name="description" content="<%= yield :description %>">
    <meta name="keywords" content="<%= yield(:keywords) %>">
    <meta name="author" content=""/>
    <meta property="qc:admins" content="1441500013641" />
    <meta property="wb:webmaster" content="32b90a1d2131b590" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <!--[if lt IE 9]><%= javascript_include_tag 'html5shiv' %><![endif]-->
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= yield(:css) %>
    <!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
    <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->
    <%= csrf_meta_tags %>

    <!-- segmentio library code and frontend related tracking -->
    <%= javascript_include_tag "segmentio" %>
    <%= render "layouts/segmentio" %>
    <!-- end of segmentio -->

  </head>
  <body class="desktop">
    <div id="wrapper" class="container">
      <%= render 'layouts/messages' %>
      <%= render 'layouts/header' %>
      <div id="main" class="row">
        <div id="content" class="<%= controller_name %> <%= action_name %> span12" role="main">
          <%= yield %>
        </div>
      </div>
      <%= render 'layouts/footer' %>
    </div> <!--! end of #container -->
  </body>
    <%= javascript_include_tag "application"  %>
    <%= yield(:js) %>
</html>
