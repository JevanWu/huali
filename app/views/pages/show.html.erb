<% content_for :title do %>
  <%= @page.meta_title.blank? ? @page.name : @page.meta_title %>
<% end %>

<% content_for :keywords do %>
  <%= @page.meta_keywords %>
<% end %>

<% content_for :description do %>
  <%= @page.meta_description %>
<% end %>

<div class="page-wrapper" id="<%= params[:id] %>-page">
  <%= markdown @page.content %>
</div>
