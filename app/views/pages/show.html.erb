<% content_for :title do %>
  <% if @page.meta_title != "" %>
    <%= @page.meta_title %>
  <% else %>
    <%= @page.name %>
  <% end %>  
<% end %>

<% content_for :keywords do %>
  <%= @page.meta_keywords %>
<% end %>

<% content_for :description do %>
  <%= @page.meta_description %>
<% end %>

<div class="page-wrapper" id="<%= params[:id] %>-page">
  <%= markdown @page.content %>
</div>
