<div class="best-products constrained row">
  <% product_row_1 = [198, 197, 196, 195]  %>
  <% product_row_2 = [194, 193, 192, 191]  %>
  <% product_row_3 = [190, 189, 188, 187]  %>
  <% products =  Product.find(product_row_1 + product_row_2 + product_row_3) %>
  <%= render partial: 'products/product', collection: products.select { |p| product_row_1.include?(p.id) }.sort_by { |p| product_row_1.index(p.id) } %>
  <%= render partial: 'products/product', collection: products.select { |p| product_row_2.include?(p.id) }.sort_by { |p| product_row_2.index(p.id) } %>
  <%= render partial: 'products/product', collection: products.select { |p| product_row_3.include?(p.id) }.sort_by { |p| product_row_3.index(p.id) } %>
