.a-product.span3 class="#{'first' if (index % 4) == 0}"
  a href="#{product_path(product)}"
    = image_tag product.rectangle_image(:medium), alt: "#{product.name} medium images"
  .share
    span =t(:sharing)
    = render 'shared/product_share_links', product: product
  .information
    strong
      em = link_to product.name, product_path(product), title: product.name
      span = product.name_en
    p ï¿¥#{product.price}
