<div class="container">
  <div class="row">
    <div id="survey" class="span4 offset4">
      <h2>请告诉我们您的信息, 我们将为您挑选鲜花</h2>
      <%= simple_form_for @survey, html: { class: 'form-horizontal' } do |f| %>
          <%= f.input :gender, required: true, placeholder: '您的性别', as: :radio_buttons %>
          <%= f.input :receiver_gender, required: true, placeholder: '你赠送对方的性别' , as: :radio_buttons %>
          <%= f.input :receiver_age, required: true, placeholder: '你赠送对方的年龄' , as: :radio_buttons %>
          <%= f.input :relationship, required: true, placeholder: '你和赠送对方的关系' , as: :select, include_blank: false %>
          <%= f.input :gift_purpose, required: true, placeholder: '购买礼物的目的', as: :select, include_blank: false  %>
          <%= f.hidden_field(:to_s, value: 'A helper field to ensure survey param exits') %>

        <div class="form-actions">
          <%= f.button :submit, '帮我选花' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
