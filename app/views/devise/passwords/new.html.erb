<% content_for(:title_img) do %>
  <%= image_tag('title-rpw.png') %>
<% end %>

<div class='authentication'>
  <div class='row'>
    <p class='span4 meta'>找回密码>></p>
    <%= simple_form_for resource, 
      as: resource_name, 
      url: password_path(resource_name),
      html: { class: 'span8 form-horizontal', method: :post } do |f| %>
      <%= devise_error_messages! %>

      <%= f.input :email, required: true%>

      <div class="form-actions">
        <%= f.button :submit, t('.send_me_reset_password_instructions'), class: 'button' %>
      </div>
    <% end %>
  </div>
</div>
