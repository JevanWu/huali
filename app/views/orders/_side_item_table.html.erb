<table class='side-table table'>
  <thead>
    <tr>
      <th colspan='3'>购花篮</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="image"><%= image_tag product.assets.first.image.url(:thumb) %></td>
        <td class="content">
          <p>
            <%= link_to product.name, product_path(product) %>
            <span>x <%= product[:quantity] %> </span>
          </p>
        </td>
        <td class="total"> <%= count_total(product) %> </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan='2'>共计</td>
      <td><%= count_cart(@products) %></td>
    </tr>
  </tfoot>
</table>
