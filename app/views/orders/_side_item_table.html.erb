<table class='side-table table'>
  <thead>
    <tr>
      <th colspan='3'><%= t(:basket) %></th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
      <tr>
        <td class="image"><%= image_tag item.assets.first.image.url(:thumb) %></td>
        <td class="content">
          <p>
            <%= link_to item.name, product_path(item) %>
            <span>x <%= item[:quantity] %> </span>
          </p>
        </td>
        <td class="total"> <%= count_total(item) %> </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan='2'><%= t(:in_total) %></td>
      <td><%= count_cart(items) %></td>
    </tr>
  </tfoot>
</table>
