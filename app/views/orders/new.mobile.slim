- content_for(:css) do
  = stylesheet_link_tag "jquery.ui.datepicker"

- content_for(:js) do
  = javascript_include_tag "datepicker-settings"
  = javascript_include_tag "prov_city_area_update"

.buy-mobile
  .product-info
    - product_in_cart = @cart.items.first
    = image_tag product_in_cart.img(:thumb)
    .product-info-main
      h3.product-name
        = link_to product_in_cart.name, product_path(product_in_cart.product_id)
      h4.product-name-en
        = product_in_cart.name_en
      p.total-num
        | 共计#{@cart.item_count}件商品
      - if @cart.discounted?
        p.discount
          | 促销优惠：-
          = number_to_currency @cart.discount_money
      p.total-price
        | 总计：
        span
          = number_to_currency @cart.total

  = render 'form'
