<% # encoding: utf-8 %>
<% content_for(:title_img) do %>
  <%= image_tag('title-checkout.png') %>
<% end %>

<div class='row'>
  <div class="span4">
    <%= render 'side_item_table', items: @order.line_items %>

    <div id="order-addr">
      <p> 您的地址是 </p>
      <%= @order.address.full_addr %>
      <%= @order.address.fullname %>
      <%= @order.address.phone %>
    </div>
  </div>

  <div class="span8">
    <ul id='checkout-nav'>
      
    </ul>

    <div id='checkout-form'>
      <%= form_tag(gateway_order_path(@order), :method => "post") do %>
        <%= render :partial => "shared/choose_payment_method", :locals => { :banks => @banks } %>
        <div>
          <%= submit_tag "确认支付", class: 'button' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render 'notice' %>
