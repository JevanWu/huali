<table class='table suggestion-on-checkout'>
  <thead>
    <tr>
      <th colspan='3'><%= t('views.order.you_may_also_like') %></th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
      <tr class='suggestion-cell'>
        <td class="image"><%= image_tag item.img(:thumb) %></td>
        <td class="content">
          <p>
            <%= link_to item.name, product_path(item) %>
          </p>
        </td>
        <td>
          <div class='suggestion-click-to-cart'>
            <%= link_to t('views.order.click_to_cart'), product_path(item), data: { product_id: item.id, product_name: item.name, product_price: item.price } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
