<tr>
  <td class="image"><%= image_tag product.assets.first.image.url(:medium), width: '150' %></td>
  <td class="name"><%= link_to product.name, product_path(product) %></td>
  <td class="price"> <%= number_to_currency product.price, unit: '&yen;'  %> </td>
  <td class="quantity">
      <%= link_to icon('plus'), current_order_path, data: { product: product.id }, class: 'add_quantity trigger' %>
      <input type='text' value="<%= product[:quantity] %>">
      <%= link_to icon('minus'), current_order_path, data: { product: product.id }, class: 'reduce_quantity trigger' %>
      <%= link_to icon('trash'), current_order_path, data: { product: product.id }, class: 'empty_quantity trigger' %>
  </td>
  <td class="total"> <%= count_total(product) %> </td>
</tr>
