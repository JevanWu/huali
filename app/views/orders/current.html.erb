<div class="collection-wrapper">
  <div class="products row">
    <% if @products.blank? %>
      <p>Empty Cart</p>
    <% else %>
      <table class='item-table table table-striped table-hover'>
        <thead>
          <tr>
            <th class="image"></th>
            <th class="name">name</th>
            <th class="price">price</th>
            <th class="quantity">quantity</th>
            <th class="total">total</th>
          </tr>
        </thead>
        <tbody>
        <% @products.each do |product| %>
              <tr>
                <td class="image"><%= image_tag product.assets.first.image.url(:thumb) %></td>
                <td class="name"><%= product.name %></td>
                <td class="price"> <%= number_to_currency product.price, unit: '&yen;'  %> </td>
                <td class="quantity">
                    <%= link_to icon('plus'), current_order_path, data: { product: product.id }, class: 'add_quantity' %>
                    <input type='text' value="<%= product[:quantity] %>">
                    <%= link_to icon('minus'), current_order_path, data: { product: product.id }, class: 'reduce_quantity' %>
                </td>
                <td class="total"> <%= count_total(product) %> </td>
              </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
  <%= link_to 'checkout', new_order_path, class: 'checkout' %>
</div>
