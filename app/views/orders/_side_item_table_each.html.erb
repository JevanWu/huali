<tr>
  <td class="image"><%= image_tag item.img(:thumb) %></td>
  <td class="content">
    <p>
      <%= link_to item.name, product_path(item) %>
      <span>x <%= item[:quantity] || 1 %> </span>
    </p>
  </td>
  <td class="total"> <%= count_total(item) || (number_to_currency item.price, unit: '&yen;') %> </td>
</tr>