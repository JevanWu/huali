<% content_for(:css) do %>
  <%= stylesheet_link_tag "jquery.ui.datepicker" %>
<% end %>

<% content_for(:js) do %>
  <%= javascript_include_tag "datepicker-settings" %>
<% end %>

<% content_for(:title_img) do %>
  <%= image_tag('title-checkout.png') %>
<% end %>

<%= render 'checkout_nav' %>

<div class='row'>
  <div class="span4">
    <%= render 'side_item_table', items: @products, title: t(:basket) %>
    <% unless @suggest_products.blank? %>
      <%= render 'suggestion_on_checkout', items: @suggest_products, title: t('views.order.you_may_also_like') %>
    <% end %>
  </div>

  <div class="span8">
    <div id='checkout-form'>
      <%= render 'form' %>
    </div>
  </div>
</div>
<%= render 'notice' %>
