<% content_for(:css) do %>
  <%= stylesheet_link_tag "jquery.ui.datepicker" %>
<% end %>

<% content_for(:js) do %>
  <%= javascript_include_tag "datepicker-settings" %>
<% end %>

<% content_for(:title_img) do %>
  <%= image_tag('title-checkout.png') %>
<% end %>

<div class='row'>
  <div class='span4 checkout-back'>
    <%= link_to '返回花篮', current_order_path %>
  </div>
  <%= render 'nav' %>
</div>

<div class='row'>
  <div class="span4">
    <%= render 'side_item_table', items: @products %>
  </div>

  <div class="span8">
    <div id='checkout-form'>
      <%= render 'form' %>
    </div>
  </div>
</div>
<%= render 'notice' %>
